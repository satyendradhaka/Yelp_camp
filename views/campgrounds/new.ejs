<%- include("../partials/header") %>

<div class="container form">
	<div class="row">
		
		<div style="width: 30%; margin: 25px auto">
			<h1 style="text-align: center">
				Create a new campground
				</h1>
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" placeholder="name" 	name="name">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" placeholder="price" min="0.01" step="0.01" name="price">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="image url" name = "image">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Description" name = "description">
				</div>
				<div class="form-group">
					<button class="btn btn-lrg btn-default btn-block btn-primary">
					Submit!
					</button>
					<a href="/campgrounds">Go Back</a>
				</div>
			
			
			
			</form>
		</div>
		

		
	</div>
	
</div>
<%- include("../partials/footer") %>